<mapper namespace="com.YoRHa.crm.settings.dao.UserDao">

    <select id="queryUserByNameAndPwd" resultType="user">

        select * from tbl_user where loginAct=#{loginAct} and loginPwd=#{loginPwd}
        
    </select>
</mapper>